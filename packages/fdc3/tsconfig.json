{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "scripthost",
            "es2015.promise",
            "es2015.symbol",
            "es2019.object",
            "es2019.array"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
